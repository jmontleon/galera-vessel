#---
{% for i in range (1,containers+1) %}
- hosts: mariadb-{{ i }}
  vars:
    mariadb_root_password: sesame
    wsrep_cluster_addresses: {% for j in range (1,containers+1) %}mariadb-{{ j }}{% if not loop.last %},{% endif %}{% endfor %}

    wsrep_node_name: mariadb-{{ i }}
  gather_facts: false
  roles:
   - jmontleon.mariadb-container
{% endfor %}
